// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Un user peut avoir plusieurs post mais un post n'a qu'un user
model User {
  id       Int     @id @default(autoincrement())
  pseudo   String  @unique
  email    String  @unique
  picture  String?
  password String
  admin    Int?
  posts    Post[]
  like     Like[]
}

// Comment rendre video et picture non obligatoire ?
model Post {
  id        Int      @id @default(autoincrement())
  message   String
  picture   Image[]
  createdAt DateTime @default(now())
  like      Like[]
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

// Many to many
model Like {
  Post   Post @relation(fields: [postId], references: [id])
  postId Int
  User   User @relation(fields: [userId], references: [id])
  userId Int

  @@id([postId, userId])
}

model Image {
  id     Int    @id @default(autoincrement())
  image  String
  Post   Post?  @relation(fields: [postId], references: [id])
  postId Int?
  // Comments   Comments? @relation(fields: [commentsId], references: [id])
  // commentsId Int?
}
