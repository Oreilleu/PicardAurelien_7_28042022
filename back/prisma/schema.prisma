// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Un user peut avoir plusieurs post mais un post n'a qu'un user
model User {
  id       Int    @id @default(autoincrement())
  pseudo   String @unique
  email    String @unique
  password String
  posts    Post[]
  likes    Like[]
}

// Comment rendre video et picture non obligatoire ?
model Post {
  id      Int    @id @default(autoincrement())
  message String
  picture String
  video   String
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?
  liker   Like[]
}

// Like est un array pour retrouver si un utilisateur à déja liké ou non un post
// Et pour savoir combien de like a un post
model Like {
  id     Int   @id @default(autoincrement())
  User   User? @relation(fields: [userId], references: [id])
  userId Int?
  Posts  Post? @relation(fields: [postId], references: [id])
  postId Int?
}
